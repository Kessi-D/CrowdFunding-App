<%- include("navbar") %> 
    
  <body>

  
<main>

  <div class="col-md-4 mx-auto col-lg-3 mt-5">
    <form class="p-4 p-md-5 border rounded-3" style="background-color:#79A00A" action="/users/loginUsers" method="post">
      <% if (typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% }) %>
    <% } %>
      <div class="form-floating mb-3 text-white" >
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" style="background-color:#79A00A; color: #fff;" name="email">
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating mb-3 text-white">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password" style="background-color:#79A00A; color: #fff; name="password">
        <label for="floatingPassword">Password</label>
      </div>
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="w-100 btn btn-lg btn-primary" type="submit">Sign In</button> <br><br>
      <a href="/git" class="w-100 btn btn-lg btn-dark" >LogIn With Github</a>
      <hr class="my-4">
      <small class="text-muted">Don't have an account? <a href="/users/user-signup">Sign Up</a><br>Remember when you signup,you sign up as a project owner</small>
    </form>
  </div>

  
</main>



      
  </body>
