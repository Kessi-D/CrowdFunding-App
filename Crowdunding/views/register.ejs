<section class="vh-100" style="background-color: #dee3ee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <form id="form" action="/addme" method="post">
              <h1 id="form-title"> Sign Up</h1>
          
              <label for="name" class="name-info">First Name</label>
              <input type="name" name="firstName" id="name" placeholder="Enter email">
              
              <label for="name" class="name-info">Last Name</label>
              <input type="name" name="lastName" id="lastName" placeholder="Enter email">
  
              <label for="email adress" class="name-info">Email Address</label>
              <input type="email" name="email" id="email" placeholder="Enter email">
          
              <label for="password" class="name-info">Password</label>
