              <label for="password" class="name-info">Confirm Password</label>
              <input type="password" name="password2" placeholder="Enter password"  id="password" required>
          
              <div class="check-container">
                  <input type="checkbox" name="" id="checkbox">
                  <span>Remember me </span>
          
              </div>
           
               <button class="submit" type="submit">Log In </button>
               <p id="forgotPsw" class="text-center">OR</p>
               <button class="submit " type="submit"><a class="text-white text-decoration-none" href="/git">Log in with Github</a></button>
               
                     
              <a href="#" class="enter-password" id="forgotPsw" onclick="resetPassword()"> <span>Forgot</span> <span id="forgotPsw">password?</span></a href="#">
            
              </form>    
              
          </div>
  
          </div>
        </div>
