  <div class="container">
    <div class="row d-flex">

      <h3 class="pb-2 border-bottom" style="color: #79A00A;">Projects in Ghana</h3><br> <br>
      <!-- loop through the project model and render the ejs -->
      <% for (var i=0; i < ghanaProjects.length; i++) { %>
        <div class="col align-self-end">
          <div class="card" style="width: 18rem;">
            <a href="/view-project/<%= ghanaProjects[i]._id %>"><img class="card-img-top" src="/images/final_stage_pics/<%= ghanaProjects[i].finalImages[0] %>" alt="project image">
            </a>
            
            <div class="card-body">
              <h5 class="project-title"><a href="/view-project/<%= ghanaProjects[i]._id %>"  class="text-decoration-none"><%= ghanaProjects[i].title %></a></h5><hr>
              <p class="project-text text-truncate"><%= ghanaProjects[i].description %></p>

              <p><b>GHS <%= ghanaProjects[i].moneyPledged %> raised</b> of GHS <%= ghanaProjects[i].amountAsked %> </p>
              <p><b><%= ghanaProjects[i].percentage %> % </b> </p>

              <% if (ghanaProjects[i].percentage >= 100) { %>
                <span class="btn btn-warning">
                  Fully Funded
                </span>
                <br> <br>
                <div class="progress">
                  <div class="progress-bar  bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              <% } else { %>
              
                <div class="progress">
                  <div class="progress-bar bg-success" role="progressbar" style="width: <%=ghanaProjects[i].percentage%>%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                </div> 

              <% } %>

      
            <!-- <div class="card-body">
              <a href="#" class="card-link">Card link</a>
              <a href="#" class="card-link">Another link</a>
            </div> -->
          </div>
        </div>

      <% } %>

  
    </div>

    <div class="row" style="margin-top: 50px;">

      <h3 class="pb-2 border-bottom" style="color: #79A00A;">Projects in Burkina Faso</h3><br> <br>
