<%- include("navbar") %>
	<main>

	
	
		<div class="container">
			<div class="row g-5">
				<div class="col-md-8">
				  <h3 class="pb-4 mb-4 fst-italic border-bottom">
					<%= project.title %>
				  </h3>
			
				  <article class="blog-post">
					<%= project.description %>
				  </article>
					
			
				  <% for(var j=0; j < project.initalImages.length; j++) { %>
					<div class="col-sm-6 col-lg-4 mb-4">
						<div class="card">
							<img src="/images/initial_stage_pics/<%= project.initalImages[j] %>" alt="">
						</div>
					  </div>
					
				  <% } %>
			
				  <article class="blog-post">
					<%= project.endResult %>
				  </article>
			
				  
			
				  <% for(var j=0; j < project.finalImages.length; j++) { %>
					<div class="col-sm-6 col-lg-4 mb-4">
						<div class="card">
							<img src="/images/final_stage_pics/<%= project.finalImages[j] %>" alt="">
						</div>
					  </div>
					
				  <% } %>
			
				  <article class="blog-post">
					<%= project.impact %>
				  </article>
			
			
			
				</div>
			
				<div class="col-md-4">
				  <div class="position-sticky" style="top: 2rem;">
			
			  
					<div class="p-4 mb-3 bg-light rounded">     
			
					  <h4 class="fst-italic">Reviewer Tools</h4>
					  <hr>
					  <form action="/reviewer/sendToAdmin" method="post">
						<input type="text" name="projectID" value="<%= project._id %>" hidden>
						<label for="subject">Add Comment:</label>
						 <br><br>
						  <textarea name="body" id="" cols="30" rows="10"></textarea>
						<button class="btn btn-success mb-3 mt-3">Approve Project</button>
					  </form>
					  <hr>
					  <form action="/reviewer/reviewerDenied" method="post">
						<input class="mt-3" type="text" name="projectID" value="<%= project._id %>" hidden>
						<label for="subject">Add Comment:</label>
						  <br><br>
						  <textarea name="body" id="" cols="30" rows="10"></textarea>
						<button class="btn btn-danger mb-3 mt-3">Reject Project</button>
					  </form>
					  <br>
				
					</div>
				</div>
			</div>

		</div>

		<br>

	
	</main>
	
	<%- include("footer") %>